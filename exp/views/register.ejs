<body class="login" mycollectionplug="bind">
<div class="login_m">
<div class="login_logo">
    <h1>zzx图书后台管理系统</h1>
</div>

<div class="login_boder">

<div class="login_padding" id="login_model">

<form action="/users/register" method="POST">
  <h2>用户名</h2>
  <label>
    <input type="text" id="username" class="txt_input " placeholder="3-12位字母数字下划线减号" name="username">
  </label>
  <h2 class="charuspan " id="username_span"></h2>
  <h2>密码</h2>
  <label>
    <input type="password" id="userpwd" class="txt_input" placeholder="4-12位字母数字" name="userpwd">
  </label>
  <h2 class="charuspan" id="userpwd_span"></h2>
  <h2>确认密码</h2>
  <label>
        
    <input type="password" id="userpwd2" class="txt_input">
  </label>
  <h2 class="charuspan" id="userpwd2_span"></h2>
  <p class="forgot"><a id="iforget" href="/login">已有账号，直接登录</a></p>
  <div class="rem_sub">  
    <label>
      <input type="submit" class="sub_button" name="button" id="button" value="注册" style="opacity: 0.7;" onclick="return test()">
    </label>

</form>
  </div>
</div>
</div>
</div>
</div>
 <br> <br>
