<script>
function yanzhengUsername(){
if($("#username").val()){
    if(/^[a-zA-Z0-9_-]{3,16}$/.test($("#username").val())){
        $("#username_span").html("√").css("color","green")
        return true
    }else{
        $("#username_span").html("用户名格式非法！").css("color","#f89406")
        return false
    }
}else{
    $("#username_span").html("用户名不能为空！").css("color","#f89406")
    return false
}
}
// $(".username").keydown(yanzhengUsername)
$("#username").blur(yanzhengUsername)
$("#username").keyup(yanzhengUsername)
//稍微写下验证
function yanzhengUserpwd(){
    if($("#userpwd").val()){
        if(/^[a-zA-Z0-9]{4,16}$/.test($("#userpwd").val())){
            $("#userpwd_span").html("√").css("color","green")
            return true
        }else{
            $("#userpwd_span").html("密码格式非法！").css("color","#f89406")
            return false
    }
    }else{
        $("#userpwd_span").html("密码不能为空！").css("color","#f89406")
        return false
    }
}
$("#userpwd").blur(yanzhengUserpwd)
$("#userpwd").keyup(yanzhengUserpwd)

function yanzhengpwd2(){
    if($("#userpwd").val()==$("#userpwd2").val()&&$("#userpwd").val()){
        $("#userpwd2_span").html("√").css("color","green")
        return true
    }else{
        $("#userpwd2_span").html("两次密码输入不一致").css("color","#f89406")
        return false
    }
}
$("#userpwd2").blur(yanzhengpwd2)
$("#userpwd2").keyup(yanzhengpwd2)

function test(){
        if(yanzhengUsername()&&yanzhengUserpwd()&&yanzhengpwd2()){
            return true;
        }else{
            return false;
        }
        
    }
</script>
