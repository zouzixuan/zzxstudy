<div class="main-area dashboard">
	
	<div class="alert alert-info">
		<a class="close" data-dismiss="alert" href="#">x</a>
		<h4 class="alert-heading">本页使用说明：</h4>
		1.基本搜索查询，查看本人功能;2.普通用户点击借书，只能借没被借出的书，归还自己借出的书;3.管理员以上权限可以强行归还所有人员的书
	</div>
	
	<div class="row">
	
		<div class="span10">
		
			<div class="slate">
			
				<form class="form-inline" method="GET" action="/lend">
					
					<input type="text" class="input-large" placeholder="请输入书名关键字..." name="key">
					<button type="submit" class="btn btn-info">搜索</button>
					
					<a href="/lend?my=1" class="btn btn-default">查看我的借阅</a>
					<a href="/lend" class="btn btn-default">查看所有借阅</a>
				</form>
			
			</div>
		
		</div>
	
	</div>
	
	<div class="row">
				
		<div class="span10">
		
			<div class="slate">
			
				<div class="page-header">
					<div class="btn-group pull-right">
						<button class="btn dropdown-toggle" data-toggle="dropdown">
							<i class="icon-download-alt"></i>打印导出
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<li><a href="">CSV</a></li>
							<li><a href="">Excel</a></li>
							<li><a href="">PDF</a></li>
						</ul>
					</div>
					<h2>My Lend Listings</h2>
				</div>
			
				<table class="orders-table table">
				<thead>
					<tr>
						<th>序号</th>
						<th>图书信息</th>
						<th >借阅情况</th>
						<th>上次借阅时间</th>
						<th >借阅人</th>
						<th>最后归还时间</th>
						<th class="actions">操作</th>
					</tr>
				</thead>
				<tbody>
			<%	result.forEach(function(item,index){  %>
					<tr>
							<td><%- ++index%></td>
							<td><a href="/bookdetail?id=<%- item._id%>"><%- item.title%></a> <br /><span class="meta"><%- item.author%></span></td>
					<%	if(item.status==0){  %>
							<td>已归还</td>
				<%		}else{  %>
							<td>已借出</td>
				<%	}  %>
							
							<td><%- item.outTime%></td>
							<td><a href="/userdetail?username=<%- item.username%>"><%- item.username%></a></td>
							<td><%- item.inTime%> </td>
							<td class="actions">
									<%	if(item.status==0){  %>
								<a class="btn btn-small btn-primary" href="/lend/borrow?id=<%- item._id%>">借书</a>
								<%	}  %>

							<%	if(isAdmin!==0||username==item.username){  %>
								<a class="btn btn-small btn-info" href="/lend/return?id=<%- item._id%>">归还</a>
						<%	}  %>
							</td>
						</tr>
			<%	})  %>
					

					<!-- 重复 -->
				</tbody>
			</table>
			</div>	
		</div>	
</div>

		

		
